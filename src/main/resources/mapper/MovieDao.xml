<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kevin.mirs.dao.MovieDao">
    <sql id="allMovieColumn">
        id, douban_id, name, douban_rating, imdb_rating, release_year, directors, screenwriters, actors, types, official_website, origin_place, release_date, languages, runtime, another_names, imdb_link, cover_link, synopsis, stills_photos_links, poster_photos_links, wallpaper_photos_links, awards, also_like_movies, reviews, short_pop_comments
    </sql>

    <select id="getAllMovie" resultType="com.kevin.mirs.entity.Movie">
        SELECT
        <include refid="allMovieColumn"></include>
        FROM mirs_movie
        ORDER BY ${orderBy}
        LIMIT #{limit}
        offset #{offset}
    </select>

    <select id="getMovieById" resultType="com.kevin.mirs.entity.Movie">
        SELECT
        <include refid="allMovieColumn"></include>
        FROM mirs_movie
        WHERE id = #{id}
    </select>

    <select id="getMovieByDoubanId" resultType="com.kevin.mirs.entity.Movie">
        SELECT
        <include refid="allMovieColumn"></include>
        FROM mirs_movie
        WHERE douban_id = #{doubanId}
    </select>

    <select id="getMovieByMovieName" resultType="com.kevin.mirs.entity.Movie">
        SELECT
        <include refid="allMovieColumn"></include>
        FROM mirs_movie
        WHERE name = #{movieName}
    </select>

</mapper>